<body>
<img src = "/images/back.jpg" width="100%" style="opacity: 0.1;">
<div class="main-container">
  <class class="main-wrap">
    <header>
      <p style="text-align: center;">
        <img src = "/images/logo_1.png" width="350"> <!--사진 표시 할라면 src = "**" 별표시 된 부분 사진 저장 위치로 변경할 것!!-->
      </p>
      <div class="sel-lang-wrap">
      </div>
    </header>
  </class>
  <div class="main-name">
  </div>
  <section class="login-input-section-wrap">
    <div class="login-input-wrap">
      <input placeholder="아이디" type="text"  id ="id">
      <span class="error_next_box"></span>
    </div>

    <div class="login-input-wrap">
      <input placeholder="비밀번호" type="password"  id="pass">
      <span class="error_next_box"></span>
    </div>

    <div class="login-input-wrap">
      <input placeholder="비밀번호 재확인" type="password"  id="password">
      <span class="error_next_box"></span>
    </div>

    <div class="login-input-wrap">
      <input placeholder="이름" type="text"  id="name">
      <span class="error_next_box"></span>
    </div>

    <div class="join_title">
      <label for="yy">생년월일</label>
      <div id="bir_wrap">
        <!-- BIRTH_YY -->
        <div id="bir_yy">
                            <span class="box">
                                <input type="text" id="birth" class="int" maxlength="4" placeholder="년(4자)">
                            </span>
        </div>

        <!-- BIRTH_MM -->
        <div id="bir_mm">
                            <span class="box">
                                <select id="month" class="sel">
                                    <option>월</option>
                                    <option value="01">1</option>
                                    <option value="02">2</option>
                                    <option value="03">3</option>
                                    <option value="04">4</option>
                                    <option value="05">5</option>
                                    <option value="06">6</option>
                                    <option value="07">7</option>
                                    <option value="08">8</option>
                                    <option value="09">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </span>
        </div>

        <!-- BIRTH_DD -->
        <div id="bir_dd">
                            <span class="box">
                                <input type="text" id="date" class="int" maxlength="2" placeholder="일">
                            </span>
        </div>

      </div>
      <span class="error_next_box"></span>
    </div>


    <div class="login-input-wrap">
      <input placeholder="본인확인 이메일" type="text" id="email" maxlength="100" placeholder="선택입력">

      <span class="error_next_box">이메일 주소를 다시 확인해주세요.</span>
    </div>

    <div class="login-input-wrap">
      <input placeholder="전화번호 입력" type="tel" id="phone" maxlength="16" placeholder="선택입력">

      <span class="error_next_box"></span>
    </div>
기
    <div class="login-button-wrap">
      <input type="button" name="btn1" value="가입하기" style="width:468px;height:52px; color:white; font-size:18; background-color:#DF3737;">
    </div>
    <div class="login-stay-sign-in">
      <input type="radio" name="aaa" value="user" onclick="getloginValue(event)">일반
      &nbsp;
      <input type="radio" name="aaa" value="doctor" onclick="getloginValue(event)">의사
    </div>
  </section>
</div>
</div>

<script>

  var $loginbuttonwrap = $(".login-button-wrap");
  var $loginstaysignin = $(".login-stay-sign-in");
  var loginValue = 0;

  function getloginValue(event){
    loginValue = event.target.value;
  };

  localStorage.removeItem('id');

  $loginbuttonwrap.click(function(e){
    if(loginValue == "user"){
      var id = document.getElementById("id").value;
      localStorage.setItem('id', id);
      location.href="main";
    }

  });


</script>
</body>

</html>